<UserControl x:Class="TaskManager.Wpf.TaskCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- card container -->
    <Border Padding="10"
            Margin="0,0,0,8"
            CornerRadius="8"
            BorderThickness="1"
            BorderBrush="#DDDDDD"
            Background="White">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- checkmark indicator; alleen zichtbaar indien completed -->
            <TextBlock Text="✓"
                       FontSize="16"
                       Margin="0,0,10,0"
                       VerticalAlignment="Top">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Opacity" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Task content -->
            <StackPanel Grid.Column="1">

                <!-- Title -->
                <TextBlock Text="{Binding Title}"
                           FontWeight="SemiBold"
                           FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextDecorations" Value="{x:Null}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Description -->
                <TextBlock Text="{Binding Description}"
                           FontSize="12"
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>

    <!-- global completed state styling -->
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Opacity" Value="0.6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

</UserControl>
